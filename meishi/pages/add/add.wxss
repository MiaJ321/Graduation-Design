.add {
  width: 750rpx;
  height: 100vh;
  background-color: #F2F3F5;
}
.add .top {
  width: 690rpx;
  height: 650rpx;
  background-color: white;
  margin: 0 30rpx;
  border-top: 25rpx solid #F2F3F5;
  border-radius: 20rpx;
}
.add .top .title {
  display: flex;
  align-items: center;
  width: 650rpx;
  height: 100rpx;
  margin-left: 15rpx;
  border-bottom: 1px solid #F2F3F5;
}
.add .top .title-text {
  display: flex;
  align-items: center;
  width: 650rpx;
  height: 100rpx;
  margin-left: 15rpx;
  border-bottom: 1px solid #F2F3F5;
}
.add .top .title-text input {
  width: 650rpx;
}
.add .money {
  width: 690rpx;
  height: 240rpx;
  background-color: white;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
}
.add .money .title,
.add .money .title-text {
  display: flex;
  align-items: center;
  width: 650rpx;
  height: 100rpx;
  margin-left: 20rpx;
  border-bottom: 1px solid #F2F3F5;
}
.add .money .title input,
.add .money .title-text input {
  width: 650rpx;
}
.add .img {
  width: 750rpx;
}
.add .img .title {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  height: 100rpx;
  font-weight: bold;
  margin-top: 60rpx;
}
.add .img .imgs {
  width: 690rpx;
  height: 400rpx;
  margin-left: 30rpx;
}
.add .img .imgs image {
  width: 690rpx;
  height: 100%;
}
.add .img .imgs .img {
  width: 100%;
  height: 100%;
}
.add .btn {
  display: flex;
  justify-content: center;
  /* margin如果提供两个，第一个用于上、下，第二个用于左、右。 */
  margin: 56rpx 0rpx;
  width: 750rpx;
}
.add .btn .van-button {
  width: 450rpx;
  border-radius: 66rpx;
  /* margin-top:20rpx; */
  margin-bottom: 40rpx;
}
.add .btn .bg {
  background-color: #c56978;
  border: 1px solid #c56978;
}
.add .con {
  width: 660rpx;
  height: 450rpx;
  background-color: white;
  padding-left: 30rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
}
.add .con .title {
  height: 100rpx;
  display: flex;
  align-items: center;
}
.add .con .r {
  margin-top: 15rpx;
}
