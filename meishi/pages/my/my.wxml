<view class="my">


  <view class="banner">
    <view class="login">
      <view class="no_login">
        <image src="{{img}}" />
      </view>
      <view class="btn">{{name}}</view>
    </view>
  </view>
  <view class="tab">
    <view class="tab-item" bind:tap="goMyAdd">
      <view class="left">
        <image src="../../images/002.png" />
        <view class="text">我的发布</view>
      </view>
      <image src="../../images/right.png" />
    </view>

    <view class="tab-item" bind:tap="goMycom">
      <view class="left">
        <image src="../../images/com.png" />
        <view class="text">我的评论</view>
      </view>
      <image src="../../images/right.png" />
    </view>

    <view class="tab-item" bind:tap="goAdmin">
      <view class="left">
        <image src="../../images/001.png" />
        <view class="text">发布美食</view>
      </view>
      <image src="../../images/right.png" />
    </view>
    <view class="tab-item" bind:tap="gSet">
      <view class="left">
        <image src="../../images/004.png" />
        <view class="text">设置</view>
      </view>
      <image src="../../images/right.png" />
    </view>
  </view>
</view>



